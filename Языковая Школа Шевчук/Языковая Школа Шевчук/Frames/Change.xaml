<Window x:Class="Языковая_Школа_Шевчук.Frames.Change"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Языковая_Школа_Шевчук.Frames"
        mc:Ignorable="d"
        Title="Change" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Название" FontSize="15" Margin="20,0"/>
        <TextBox Margin="20,30,500,20"/>
        <TextBlock Text="Цена" FontSize="15" Margin="20,0" Grid.Row="1"/>
        <TextBox Margin="20,30,500,20" Grid.Row="1"/>
        <TextBlock Text="Продолжительность" FontSize="15" Margin="20,0" Grid.Row="2"/>
        <TextBox Margin="20,30,500,20" Grid.Row="2"/>
        <TextBlock Text="Скидка" FontSize="15" Margin="20,0" Grid.Row="3"/>
        <TextBox Margin="20,30,500,20" Grid.Row="3"/>
        <Button Grid.Row="4" Margin="600,20,20,20" Content="Подтвердить" FontSize="15"/>
    </Grid>
</Window>
